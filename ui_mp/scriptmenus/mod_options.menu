#include "ui/menudef.h"
#include "ui_mp/common/redux.inc"

#define MENU_NAME					"mod_options"
#define MENU_TITLE					"MOD OPTIONS"

menudef
{
	name 							MENU_NAME
	rect 							0 0 640 480 4 4
	forecolor 						1 1 1 1
	REDUX_INGAME_MENU
	onOpen
	{
		open MENU_NAME"_r";
		lerp x "from" -200 "to" 0 "over" 0.1;
		lerp alpha "from" 0 "to" 1 "over" 0.1;
	}
	onRequestClose
	{
		close MENU_NAME"_r";
		lerp alpha "from" 1 "to" 0 "over" 0.1;
		lerp x "from" 0 "to" -200 "over" 0.1;
	}

	REDUX_BIND( 0, "+USERELOAD", "+usereload"; )
	REDUX_BIND( 1, "DROP WEAPON", "drop"; )
	REDUX_BIND( 2, "SUICIDE (FFA)", "suicide"; )
	REDUX_BIND( 3, "SLOW LAST (FFA)", "slowlast"; )
	REDUX_BIND( 4, "2 PIECE (FFA)", "2piece"; )
	REDUX_SEPARATOR( 5 )
	REDUX_SLIDER( 5.25, "YAWSPEED", "cl_yawspeed", 500, 2000, 950, ;, 1 )
	REDUX_SLIDER( 6.25, "HORIZONTAL SAFE AREA", "safearea_adjusted_horizontal", 0.85, 1, 1, exec "resetViewport";, 0 )
	REDUX_SLIDER( 7.25, "VERTICAL SAFE AREA", "safearea_adjusted_vertical", 0.85, 1, 1, exec "resetViewport";, 0 )
	REDUX_SEPARATOR( 8.25 )
	REDUX_BUTTON( 8.5, "EDIT KILLSTREAK BINDS", close "self"; open "killstreak_binds"; )
}

menudef
{
	name 							MENU_NAME"_r"
	rect 							0 0 640 480 4 4
	forecolor 						1 1 1 1
	visible 						when ( menuisopen( MENU_NAME ) )
	decoration
	onOpen
	{
		lerp x "from" 200 "to" 0 "over" 0.1;
		lerp alpha "from" 0 "to" 1 "over" 0.1;
	}
	onRequestClose
	{
		lerp alpha "from" 1 "to" 0 "over" 0.1;
		lerp x "from" 0 "to" 200 "over" 0.1;
	}

	CREATE_SHADER( 0 0 854 480 0 0, "gradient_fadein", 0 0 0 0.4 )
}

